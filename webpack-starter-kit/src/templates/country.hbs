{{#each this}}
<div class="container">
    <h2 class="name"> {{name}} </h2>
<div class="description-block">
    <ul class="info-list">
    <li class="capital"> Capital: {{capital}}  </li>
    <li class="population"> Population: {{population}} </li>
    <li class="languages"><p>Languages:</p>
        <ul class="languages-list"> 
            
            
            {{#each  languages }}
              <li class="language-item">{{this.name}}</li>
            {{/each}}
        </ul>
    </li>
</ul>
</div>

<div class="flag-block">
    <p class="image">
        <img src="{{flag}}" alt="" width="320px">
    </p>
</div>
</div>

{{/each}} 



